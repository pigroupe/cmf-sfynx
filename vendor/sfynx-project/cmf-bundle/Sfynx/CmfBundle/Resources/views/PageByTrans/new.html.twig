{% initJquery 'FORM:prototype-bytab' %}
{% if app.request.query.get('NoLayout') %}
	{% set layout_nav = getParameter('sfynx.auth.theme.layout.ajax') %}
{% else %}
	{% set layout_nav = app.request.attributes.get('sfynx-layout') %}
{% endif %}	
{% extends layout_nav %}

{% block title %}
	<h1><a href="{{ path('admin_redirection') }}">{{ "pi.home"|trans }}</a> > <a href="{{ path_url('admin_pagebytrans') }}">{{ 'pi.page.index.title'|trans }}</a> > {{ 'pi.grid.action.create'|trans }}</h1>
{% endblock %}
 
{% block content %}
    {{ parent() }}
    <!-- Begin tag markup -->
	<div id="tabs">
		{% include getParameter('sfynx.auth.theme.layout.admin.pc')|replace({'::': ':'})~"Crud:new-header.html.twig" %}
		{% form_theme form getParameter('sfynx.auth.theme.layout.admin.form.template') %}
		<form class="myform" action="{{ path('admin_pagebytrans_create', { 'NoLayout': app.request.query.get('NoLayout') }) }}" method="post" {{ form_enctype(form) }} novalidate>
			<div id="tabs-1">
				{{ form_widget(form) }}
			</div>
		    <ul class="ui-widget-header ui-footer">
			    <li>
			    	<button id="add_tab" class="button-ui-add-tab">{{ 'pi.grid.action.add-tab'|trans }}</button>
			    	<button type="submit" class="button-ui-create">{{ 'pi.grid.action.create'|trans }}</button>
		            <a href="{{ path('admin_pagebytrans') }}" class="button-ui-back-list">{{ 'pi.grid.action.back-to-the-list'|trans }}</a>
			    </li>
			</ul>
		</form>
		{% include getParameter('sfynx.auth.theme.layout.admin.pc')|replace({'::': ':'})~"Crud:new-footer.html.twig" %}	
	</div>
	<!-- End tag markup -->	
	
	{% set options = {'prototype-name': ['translations'], 'prototype-tab-title': 'pi.page.translation.prototype-tab-title'|trans} %}
	{{ renderJquery('FORM', 'prototype-bytab', options )|raw }}

	<script type="text/javascript">
	// <![CDATA[
	$('ul.ui-widget-header').ready(function(){		
		var allListElements = new Array();		
		$("select[id$='_heritage']").each(function(index) {
			allListElements[index] = $(this).parents('.clearfix'); 
			allListElements[index].hide();
		});
		
		$("input[id$='_secure']").change(function () {
			if($(this).is(':checked')){
				$("select[id$='_heritage']").each(function(index) {
					$(this).parents('.no-accordion').find(allListElements[index]).show();
				});
			}else{
				$("select[id$='_heritage']").each(function(index) {
					$(this).parents('.no-accordion').find(allListElements[index]).hide();
				});
			}
       	});

		$("input[id$='_secure']").on('ifChecked', function(event){
			$("select[id$='_heritage']").each(function(index) {
				$(this).parents('.no-accordion').find(allListElements[index]).show();
			});
		});
		$("input[id$='_secure']").on('ifUnchecked', function(event){
			$("select[id$='_heritage']").each(function(index) {
				$(this).parents('.no-accordion').find(allListElements[index]).hide();
			});
		});       	
	});
	// ]]>
	</script> 	
	
{% endblock %}